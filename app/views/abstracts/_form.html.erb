<fieldset>
  <label for='abstract_type_id'>Type of abstract</label>
  <%= f.select :meeting_abstract_type_id, @abstract_types %>
</fieldset>
<fieldset>
  <label for='abstract_title'>Title</label>
  <%= f.text_area :title, :size => '150x3' %>
</fieldset>
<fieldset>
  <label for='abstract_authors'>Authors</label>
  <%= f.text_area :authors , :size => '150x3'%>
</fieldset>
<fieldset>
  <label for='abstract_author_affiliaations'>Author Affiliations</label>
  <%= f.text_area :author_affiliations , :size => '150x3'%>
</fieldset>
<fieldset>
  <label for='abstract_abstract'>Abstract</label>
  <%= f.text_area :abstract, :size => '150x20'%>
</fieldset>
<fieldset>
  <label for='abstract_file'>File</label>
  <%= f.file_field :pdf %>
</fieldset>

