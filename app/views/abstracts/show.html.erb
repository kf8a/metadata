<h1><%= @abstract.title %></h1>

<p><%= @abstract.authors %></p>

<p><%= textilize(@abstract.abstract) %></p>

<%= link_to 'Index', abstracts_path %> |
<%= link_to 'Back to meeting', meeting_path(@abstract.meeting) %> |
<% if admin? %>
  <%= link_to 'Edit', edit_abstract_path(@abstract) %> |
  <%= link_to 'Destroy', @abstract, :method => 'delete', :confirm => 'Are you sure?' %>
<% end %>
<%= link_to 'log out', session_path(), :method => 'delete' if signed_in? %>