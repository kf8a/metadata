<h1>New project</h1>

<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :abstract %><br />
    <%= f.text_area :abstract %>
  </p>
	<p>
		<%= f.label :datasets%>
		<%= select "dataset", "dataset", @datasets.collect {|x| [[x.dataset,x.title].join(' '),x.id]}, { :include_blank => true}, {:multiple => true, :size => 10} %>
	</p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>
