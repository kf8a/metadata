<h1>New dataset</h1>

<%= form_for(:dataset, :url => datasets_path) do |f| %>
  <%= render "shared/error_messages", :target => @dataset %>
  <p>
    <label for='dataset_title'>Title</label>
    <%= f.text_field :title %>
  </p>
  <p>
    <label for="dataset_abstract">Abstract</label>
    <%= f.text_area :abstract  %>
  </p>
  <p>
    <label for="keywords">Keywords</label>
    <%= f.text_field :keywords %>
  </p>
  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', datasets_path %>