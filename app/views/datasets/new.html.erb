<h1>New dataset</h1>

<%= semantic_form_for @dataset, :html => { :multipart => true } do |form| %>
  <%= render "shared/error_messages", :target => @dataset %>
  <%= render 'form', :form => form, :datatable => @dataset %>
  <%= form.buttons %>
<% end %>

<h2>Or import a dataset from an EML file: </h2>

<%= form_for @dataset, :html => { :multipart => true } do |f| %>
  <p>
    <label for='dataset_file'>EML File</label>
    <%= f.file_field :eml_file %>
  </p>
  <p>
    <%= submit_tag "Create from EML file" %>
  </p>
<% end %>

<%= link_to 'Back', datasets_path %>
