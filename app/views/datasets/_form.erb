<%= form.inputs do %>
<%= form.input :dataset %>
<%= form.input :title %>
<%= form.input :abstract %>
<%= form.input :website %>
<%= form.input :sponsor %>
<%= form.input :status %>
<%= form.input :initiated, as: :date_picker, include_blank: true %>
<%= form.input :completed, as: :date_picker, include_blank: true %>
<%= form.input :core_dataset %>
<%= form.input :on_web %>
<%= form.input :keyword_list %>
<% end %>

<%= form.inputs do %>
<div id = 'files'>
  <%= form.semantic_fields_for :files do |f| %>
          <%# <%= file_field_tag "files[]", type: :file, multiple: true %>
    <%= render :partial => 'file_fields', :locals => {:f => f} %>
  <% end %>
</div>
<%= link_to_add_fields "Add File", form, :dataset_files %>
<% end %>

<%= form.inputs do %>
<div id = 'affiliations'>
    <%= form.semantic_fields_for :affiliations do |f| %>
      <%= render :partial => 'affiliation_fields', :locals => {:f => f} %>
    <% end %>
</div>
<%= link_to_add_fields "Add Person", form, :affiliations %>
<% end %>
