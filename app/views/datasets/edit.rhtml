<h1>Editing dataset</h1>

<%= error_messages_for :dataset %>

<% form_for(:dataset, :url => dataset_path(@dataset), :html => { :method => :put }) do |f| %>
	<p>
		<label for='dataset_title'>Title</label>
		<%= f.text_field :title %>
	</p>
	<p>
		<label for="dataset_abstract">Abstract</label>
		<%= f.text_area :abstract, :cols => 60 %>
		
	</p>
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', dataset_path(@dataset) %> |
<%= link_to 'Back', datasets_path %>