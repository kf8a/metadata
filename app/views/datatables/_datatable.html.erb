<li>
  <% if datatable.dataset.sponsor.data_restricted %>
    <i class="fas fa-lock"></i>
  <% end %>
  <%=link_to raw(datatable.title_and_years), datatable_path(datatable) %>
  <% unless datatable.dataset.current_doi %>
    <i class="fa fa-fire" aria-hidden="true"></i>
  <% end %>

  <% if @area %>
    <span class='core-areas'>
      (<%= datatable.id %>)
      <%= CoreArea.all.collect {|x| datatable.core_areas.all.include?(x) ? x.name[0..1]: "&nbsp;&nbsp;" }.join("-").html_safe %>
    </span>
  <% end %>
</li>
