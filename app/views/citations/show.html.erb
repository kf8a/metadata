<p><%= raw @citation.formatted  %></p>
<p><%=raw textilize(@citation.abstract) %></p>
<% if @citation.doi %>
  <p>DOI: <a href="http://dx.doi.org/<%= @citation.doi %>"><%= @citation.doi %></a></p>
<% end %>
<% if @citation.publisher_url %>
  <p><%= link_to @citation.publisher_url, @citation.publisher_url %></p>
<% end %>
<% if @citation.pdf.exists? %>
  <% if signed_in? or Rails.env == 'development'%>
    <%=link_to 'pdf', @citation.pdf.url  if @citation.pdf.url %>
  <% end %>
<% end %>
<% if signed_in? and current_user.role == 'admin' %>
  <%= button_to 'Delete', { :action => "destroy", :id => @citation.id },
    :confirm => "Are you sure?", :method => :delete  %>
<% end %> 
