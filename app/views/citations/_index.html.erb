<% if @forthcoming_citations.present? %>
  <ul class='citations'>
  <% year = -1 %>
  <% @forthcoming_citations.each do |citation| %>
    <%= render 'citation', citation: citation, year: year %>
    <% year = 0 %>
  <% end %>
  </ul>
<% end %>
<ul class='citations'>
  <% year = 0 %>
  <% @citations.each do |citation| %>
    <%= render 'citation', citation: citation, year: year %>
    <% year = citation.pub_year.to_i %>
  <% end %>
</ul>
