<li class='citation'>
  <% cache :action_suffix => "citation-#{citation.id}" do %>
    <% unless year.nil? %>
      <% if citation.pub_year.to_i != year  -%>
          <div class='pub_year'><%= citation.pub_year %></div>
      <% end %>
    <% end %>
    <p>
    <%=raw citation.formatted %>
    </p>
  <% end %>
  <%= link_to 'abstract', citation_url(citation) %>
  <% if citation.pdf.exists?  and signed_in? %>
    <%= link_to 'pdf', download_citation_url(citation) %>
  <% end %>
</li>
