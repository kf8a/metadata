<h2>Sign in</h2>

<div class="notice"><%= flash[:failure] %></div>
<div class="notice"><%= flash[:success] %></div>


<% semantic_form_for :session, :url => session_path do |form| %>
  <% form.inputs do %>
    <%= form.input :openid_url, :required => false,  :wrapper_html => { :class => "openid" } %>
    <li class='big'>
    or
    </li>
    <%= form.input :email , :required => false, :input_html => { :size => 25 } %>
    <%= form.input :password, :as => :password, :input_html => { :size => 25 }, :required => false %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button "Sign in" %>
  <% end %>
<% end %>

<ul>
  <li>
    <%= link_to "Sign up", sign_up_path %>
  </li>
  <li>
    <%= link_to "Forgot password?", new_password_path %>
  </li>
</ul>

