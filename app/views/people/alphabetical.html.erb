<p><%= link_to  'categorical', {:action => :index}%> alphabetical</p>
<ul class='multicolumn'>
  <% for person in @people %>
    <li><%= link_to "#{person.full_name}", person_path(person) %>
      <% if signed_in? %>
        <%= link_to 'Edit', edit_person_path(person), {:class => 'edit'} %>
        <%= link_to image_tag("trash.gif"),
            :url => person_path(person),
            :method => 'post',
            :confirm => 'Are you sure?',
            :remote => true %>
      <% end %>
    </li>
  <% end %>
</ul>

<br />

<%= link_to 'New person', new_person_path if signed_in?%>
