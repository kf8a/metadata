<div class='twocolumn'>
    <%= f.input :sur_name %>
    <%= f.input :middle_name %>
    <%= f.input :given_name %>
    <%= f.input :friendly_name %>
    <%= f.input :title %>
    <%= f.input :organization %>
    <%= f.input :sub_organization %>
    <%= f.input :street_address %>
    <%= f.input :city %>
    <%= f.input :locale %>
    <%= f.input :country %>
    <%= f.input :postal_code %>
    <%= f.input :phone, :label => 'Phone Number' %>
    <%= f.input :fax, :label  => 'Fax Number' %>
    <%= f.input :email %>
    <%= f.input :url, :label => 'Website' %>
</div>

<%= f.simple_fields_for :affiliations do |affiliation_form| %>

  <table id='affiliations'>
    <tr>
      <th>Role</th>

      <th>Title</th>
      <th>Seniority</th>
      <th>Research Interest</th>
      <th>Supervisor</th>
      <th>Delete</th>
    </tr>
    <% person.affiliations.each do |affiliation| %>
      <%= render 'affiliation_fields', f: affiliation_form %>
    <% end %>
  </table>
  <%= link_to_add_fields "Add Role", f, :affiliations %>
<% end%>
