<p>Use this page to make someone an owner of 
  <% if @datatable %>
    <%= @datatable.name %>.
  <% else %>
    a datatable.
  <% end %>
</p>

<% form_tag '/permissions/create' do %>
  <%= label_tag 'email' %>
  <%= text_field_tag 'email' %>
  <% if @datatable %>
    <%= hidden_field_tag 'datatable', @datatable.id %>
  <% else %>
    <%= label_tag 'datatable' %>
    <%= select_tag 'datatable', options_from_collection_for_select(@datatables, 'id', 'name') %>
  <% end %>
  <%= submit_tag 'Grant Permission' %>
<% end %>
