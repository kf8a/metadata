<h1>New invite</h1>

<%= simple_form_for @invite do |invite| %>
  <%= render "shared/error_messages", :target => @invite %>
  
  <%= invite.input :firstname %>
  <%= invite.input :lastname %>
  <%= invite.input :email %>
  <%= invite.input :glbrc_member %>

  <%= invite.button :submit %>
<% end %>

<%= link_to 'Back', invites_path %>
