<h1>Publications <%= @decoration %>: <%=h @pub_type%> </h1>
<% year = 0 -%>
<% for publication in @publications %>
	<% if year != publication.year -%>
		<% year = publication.year -%>
		<% unless @alphabetical -%>
			<p class='years'><%= year %></p>
		<% end  -%>
	<% end  -%>
	<div id="<%= publication.id%>"class='citation'>
			<%= textilize(publication.citation) if publication.citation %>
			<% if  publication.abstract  -%>
				<a href="<%= url_for publication_path(publication) %>">
					abstract&nbsp;&hellip;</a>
			<% end -%>
			<%= link_to 'edit', edit_publication_path(publication), {:class=>'edit'} if logged_in? %>
	<%= link_to_remote image_tag("trash.gif"), :url => publication_path(publication), :method => 'delete', :confirm => 'Are you sure?' if logged_in?%>	
	</div>
<% end %>
<p><% if logged_in? -%>
	<%= link_to 'logout' %>
	<%= link_to 'new publication', new_publication_path %>
	<% else -%>
	<%= link_to 'login', new_sessions_path %>
	<% end -%>
</p>

