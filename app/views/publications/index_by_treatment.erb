<h2>Publications by Treatment</h2>
<p>Please click on an experiment or treatment name to list LTER articles that  have reported results from same.</p>
<ul>
	<% @studies.each do |study| -%>
	<li class='top_level'>
		<% if study.treatments.size > 1 %>
			<%= study.name %>
			<ul>
				<% study.treatments.each  do |treatment| -%>
				<li>
					<%= link_to treatment.name, {:action => :index, :treatment => treatment} %> <%= treatment.description %>
				</li>
				<% end -%>
			</ul>
		<% else -%>
			<%= link_to study.name,  {:action => :index, :treatment => study.treatments[0].id} %>
		<% end -%>
	</li>
<% end -%>
