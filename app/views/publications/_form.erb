<p>
	<label for='publication_year'>Year</label>
	<%= f.text_field :year%>
<p>
	<label for='publication_citation'>Citation</label>
	<%= f.text_area :citation , :size => '50x5'%>
</p>
<p>
	<label for='publication_type'>Publication Type</label>
	<%= f.select :publication_type_id, @publication_types, {:include_blank => true}%>
</p>
<p>
	<label for='publication_abstract'>Abstract</label>
	<%= textile_editor 'publications', :abstract, :size => '60x20'%>
</p>
<p>
	Treatment associations:
	<% @treatments.each do |treatment| -%>
		<%= treatment.name %><%= check_box_tag 'publications[treatment_ids][]', treatment.id, @publications.treatments.include?(treatment) %>
	<% end -%>
</p>
<%= textile_editor_initialize -%>
